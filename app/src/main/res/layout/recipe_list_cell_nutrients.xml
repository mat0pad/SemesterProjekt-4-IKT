<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/White"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/recipe_list_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:background="@color/Gray_Light"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/recipe_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="32dp"
        android:layout_toRightOf="@id/recipe_list_image"
        android:gravity="center_vertical"
        android:text="Title"
        android:textColor="@color/Black"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/carbs_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="80dp"
        android:layout_toLeftOf="@+id/recipe_list_carbs"
        android:src="@drawable/carbs" />

    <TextView
        android:id="@+id/recipe_list_carbs"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="80dp"
        android:layout_toLeftOf="@+id/protein_image"
        android:gravity="center_vertical"
        android:text="1203"
        android:textColor="@color/Black"
        android:textSize="12sp" />


    <ImageView
        android:id="@+id/protein_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="80dp"
        android:layout_toLeftOf="@+id/recipe_list_protein"
        android:src="@drawable/protein" />

    <TextView
        android:id="@+id/recipe_list_protein"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="80dp"
        android:layout_toLeftOf="@+id/calc_image"
        android:gravity="center_vertical"
        android:text="1203"
        android:textColor="@color/Black"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/calc_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="80dp"
        android:layout_toLeftOf="@+id/recipe_list_calc"
        android:src="@drawable/calc" />

    <TextView
        android:id="@+id/recipe_list_calc"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="80dp"
        android:gravity="center_vertical"
        android:text="1203"
        android:textColor="@color/Black"
        android:textSize="12sp" />

</RelativeLayout>