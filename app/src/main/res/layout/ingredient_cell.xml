<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="90dp"
    android:layout_height="140dp">

    <ImageView
        android:id="@+id/ingredient_image_cell"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="fitCenter"
        android:src="@drawable/close" />

    <TextView
        android:id="@+id/ingredient_name_cell"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ingredient_image_cell"
        android:layout_alignStart="@+id/ingredient_image_cell"
        android:layout_below="@id/ingredient_image_cell"
        android:text="Name"
        android:textAlignment="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/ingredient_amount_cell"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ingredient_image_cell"
        android:layout_alignStart="@+id/ingredient_image_cell"
        android:layout_below="@id/ingredient_name_cell"
        android:text="Amount"
        android:textAlignment="center"
        android:textStyle="bold" />

</RelativeLayout>