        android:layout_width="match_parent"
        android:layout_height="155dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_horizontal"
        android:text="Lunch"
        android:textColor="@color/White"
        android:textSize="30sp"
        android:textStyle="bold"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="155dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_horizontal"
        android:text="Dinner"
        android:textColor="@color/White"
        android:textSize="30sp"
        android:textStyle="bold"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="155dp"
        />

    />

   

