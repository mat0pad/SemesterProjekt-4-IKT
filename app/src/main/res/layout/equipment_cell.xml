<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="90dp"
    android:layout_height="130dp">

    <ImageView
        android:id="@+id/equipment_image_cell"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="fitCenter"
        android:src="@drawable/close" />

    <TextView
        android:id="@+id/equipment_name_cell"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/equipment_image_cell"
        android:layout_alignStart="@+id/equipment_image_cell"
        android:layout_below="@+id/equipment_image_cell"
        android:text="Name"
        android:textAlignment="center"
        android:textSize="12sp" />

</RelativeLayout>